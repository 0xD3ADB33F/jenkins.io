- # Ensure we have URI in scope
- require 'uri'

%div
  %h4
    = page.title

  %div.content
    %div.item-list
      %ul.ji-dated-list
        - page.articles.each do |link, title|
          %li.post
            %a.article{:href => link}
              %h6.title
                = title
              .url
                = URI.parse(link).host

